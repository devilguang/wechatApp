.list__item {
    padding-bottom: 26rpx;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #d2d2d2;
}

.list__title {
    display: block;
    margin-bottom: 10rpx;
    line-height: 50rpx;
    color: #3982e8;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list__content{
    display: flex;
    justify-content: space-between;
}

.list__img {
    width: 180rpx;
    height: 134rpx;
    margin: 0 28rpx 0 15rpx;
}
 
.list__img image {
    width: 100%;
    height: 100%;
} 

.list__text {
    flex: 1;
}

.list__brief{
    display: block;
    max-height: 144rpx;
    margin-top: -8rpx;
    line-height: 48rpx;
    color: #666;
    font-size: 24rpx;
    overflow: hidden;
}