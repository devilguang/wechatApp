<template name="listItem">
    <view class="list__item">
        <text class="list__title">{{title}}</text>
        <view class="list__content">
            <view class="list__img"><image src="{{img}}" mode="aspectFit"></image></view>
            <view class="list__text">
                <text class="list__brief">{{brief}}</text>
            </view>
        </view>
    </view>
</template>

<template name="collectItem">
    <view class="list__item list__item--collect">
        <text class="list__title">{{title}}</text>
        <view class="list__content">
            <view class="list__img"><image src="{{img}}" mode="aspectFit"></image></view>
            <view class="list__text">
                <text class="list__brief">{{brief}}</text>
                <view class="list__btn">
                    <button class="weui-btn mini-btn" type="primary" size="mini">查看详情</button>
                    <button class="weui-btn mini-btn" type="warn" size="mini">立即联系</button>
                
                </view>
            </view>
            
        </view>
    </view>
</template>

<template name="collectProfessItem">
    <navigator open-type="navigate" class="list__item list__item--collect" url="/pages/p-detail/p-detail">
        <view class="list__content list__content--professor">
            <view class="list__img--professor"><image src="{{img}}" mode="aspectFit"></image><text>{{name}}</text></view>
            <view class="list__text">
                <text class="list__title">{{college}} {{unit}} {{professionalTitle}}</text>
                <text class="list__brief list__brief--professor">{{brief}}</text>
                <view class="list__btn">
                    <button class="weui-btn mini-btn" type="primary" size="mini">查看详情</button>
                    <button class="weui-btn mini-btn" type="warn" size="mini">立即联系</button>
                </view>
            </view>
        </view>
    </navigator>
</template>