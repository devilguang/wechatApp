@import 'style/weui.wxss';
@import 'templates/Tcommenting.wxss';
@import 'templates/TListItem.wxss';

/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    box-sizing: border-box;
    font-family: '微软雅黑';
}

/* title */

.y-title {
    width: 96%;
    padding: 0 2%;
    display: flex;
    justify-content: space-between;
    line-height: 60rpx;
    font-size: 28rpx;
}

.y-title::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    display: block;
    width: 100%;
    height: 1rpx;
    margin-top: 60rpx;
    background-color: #e8e8ed;
}

/* navbar */

page, .page, .page__bd {
    width: 100%;
}

.page__bd {
    padding-bottom: 0;
}

.weui-navbar__item {
    padding: 5px 0 6px;
}

.weui-tab__panel {
    padding-top: 36px;
}

.weui-tab__content {
    padding-top: 10rpx;
}

.weui-navbar__item.weui-bar__item_on{
    color: #3982e8;
}

.weui-navbar__slider{
    height: 4rpx;
    background-color: #3982e8;
}

/* list */
.list--center{
    width: 92%;
    padding: 0 4%;
}

.list + .y-title{
    border-top: 20rpx solid #e8e8ed;
}