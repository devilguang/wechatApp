@import 'style/weui.wxss';
@import 'templates/Tcommenting.wxss';
@import 'templates/TListItem.wxss';

/**app.wxss**/

page {
    background-color: #e8e8ed;
    font-family: '微软雅黑';
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    background-color: #fff;
    box-sizing: border-box;
}

/* title */

.y-title {
    width: 96%;
    padding: 0 2%;
    display: flex;
    justify-content: space-between;
    line-height: 60rpx;
    font-size: 30rpx;
}

.y-title--commenting {
    color: #3982e8;
}

.y-title::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    display: block;
    width: 100%;
    height: 1rpx;
    margin-top: 60rpx;
    background-color: #e8e8ed;
}

.y-title--commenting image {
    position: relative;
    top: 6rpx;
    width: 36rpx;
    height: 32rpx;
    margin-right: 12rpx;
}

/* navbar */

page, .page, .page__bd {
    width: 100%;
}

.page__bd {
    padding-bottom: 0;
}

.weui-navbar__item {
    padding: 5px 0 6px;
}

.weui-tab__panel {
    padding-top: 36px;
}

.weui-tab__content {
    padding-top: 10rpx;
}

.weui-navbar__item.weui-bar__item_on {
    color: #3982e8;
}

.weui-navbar__slider {
    height: 4rpx;
    background-color: #3982e8;
}

/* list */

.y-list--center {
    width: 92%;
    padding: 0 4%;
}

.y-list + .y-title {
    border-top: 20rpx solid #e8e8ed;
}

/* btn */

.y-unconfirmed__notice .weui-btn, .y-commenting__btn-wrap .weui-btn {
    line-height: 1.8;
    font-size: 12px;
}

button[type="primary"] {
    background-color: #3982e8;
}

.button-hover[type="primary"] {
    background-color: #63a1f6;
    color: #d1dff3;
}

.y-btn--large{
    position: fixed;
    bottom: 0;
    width: 100%;
    border-radius: 0;
}

/* form */

form {
    width: 100%;
}

form input {
    width: 100%;
    height: 72rpx;
    padding: 6rpx 3.7%;
    border: 1rpx solid #e8e8ed;
    border-radius: 8rpx;
    line-height: 58rpx;
    font-family: '微软雅黑';
    box-sizing: border-box;
}

.button-hover {
    background-color: transparent;
}

/* detail */

.y-content {
    width: 94%;
    margin: 0 auto;
    padding: 10rpx 0 50rpx;
    line-height: 50rpx;
    color: #666;
    font-size: 28rpx;
    text-align: justify;
}
