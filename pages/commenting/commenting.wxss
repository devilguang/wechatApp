/* pages/commenting/commenting.wxss */

.weui-navbar {
    position: fixed;
    top: 0;
    background-color: #fff;
}

.weui-tab__content {
    padding-top: 0;
}

.y-unconfirmed__item {
    display: flex;
    justify-content: space-between;
    padding-left: 34rpx;
}

.y-unconfirmed__item + .y-unconfirmed__item::after {
    content: "";
    position: absolute;
    left: 20rpx;
    width: 100%;
    height: 1rpx;
    background-color: #e8e8ed;
}

.y-unconfirmed__content {
    flex: 1;
    max-width: 69%;
    padding: 2rpx 0 6rpx;
}

.y-unconfirmed__content text {
    display: block;
    line-height: 50rpx;
}

.y-unconfirmed__title {
    display: block;
    margin-top: 6rpx;
    color: #333;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.y-unconfirmed__content text.y-unconfirmed__title {
    line-height: 60rpx;
}

.y-unconfirmed__brief {
    max-height: 100rpx;
    color: #555;
    font-size: 26rpx;
    overflow: hidden;
    text-align: justify;
}

.y-unconfirmed__remark {
    color: #777;
    font-size: 20rpx;
}

.y-unconfirmed__notice {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    width: 180rpx;
    padding: 40rpx 10rpx;
    margin-left: 20rpx;
    background-color: #edf3fc;
    font-size: 20rpx;
    color: #3982e8;
}

.y-unconfirmed__company {
    display: flex;
    justify-content: space-between;
}

.y-unconfirmed__img {
    width: 100rpx;
    height: 100rpx;
    margin-top: 14rpx;
    margin-bottom: 8rpx;
}

.y-unconfirmed__img image {
    width: 100%;
    height: 100%;
}

.y-unconfirmed__info {
    flex: 1;
    max-width: 74%;
    margin-left: 26rpx;
}

.y-unconfirmed__contacts {
    margin-top: -6rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.y-commenting__filtrate-wrap{
    justify-content: flex-start;
}

.y-commenting__filtrate{
    margin-left: 10rpx;
    padding: 0 60rpx;
    color: #676566;
}

.y-commenting__filtrate::before,
.y-commenting__filtrate::after{
    content: "";
    position: absolute;
    display: block;
}

.y-commenting__filtrate::before{
    margin-left: 70rpx;
    margin-top: 18rpx;
    border-left: 6rpx solid transparent; 
    border-right: 6rpx solid transparent; 
    border-bottom: 10rpx solid #676566; 
}
.y-commenting__filtrate::after{
    margin-left: 70rpx;
    margin-top: -26rpx;
    border-left: 6rpx solid transparent; 
    border-right: 6rpx solid transparent; 
    border-top: 10rpx solid #676566; 
}