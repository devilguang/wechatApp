/* pages/commenting/commenting.wxss */

.weui-navbar {
    position: fixed;
    top: 0;
    background-color: #fff;
}

.weui-tab__content {
    padding-top: 0;
}

.y-unconfirmed__item {
    display: flex;
    justify-content: space-between;
    padding-left: 34rpx;
    transition: all 0.3;
}

.y-unconfirmed__item + .y-unconfirmed__item::after {
    content: "";
    position: absolute;
    left: 20rpx;
    width: 100%;
    height: 1rpx;
    background-color: #e8e8ed;
}

.y-unconfirmed__content {
    flex: 1;
    max-width: 69%;
    padding: 2rpx 0 6rpx;
}

.y-unconfirmed__content text {
    display: block;
    line-height: 50rpx;
}

.y-unconfirmed__title {
    display: block;
    margin-top: 6rpx;
    color: #333;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.y-unconfirmed__content text.y-unconfirmed__title {
    line-height: 60rpx;
}

.y-unconfirmed__brief {
    max-height: 100rpx;
    color: #555;
    font-size: 26rpx;
    overflow: hidden;
    text-align: justify;
}

.y-unconfirmed__remark {
    color: #777;
    font-size: 20rpx;
}

.y-unconfirmed__notice {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    width: 180rpx;
    padding: 40rpx 10rpx;
    margin-left: 20rpx;
    background-color: #edf3fc;
    font-size: 20rpx;
    color: #3982e8;
}

.y-unconfirmed__company {
    display: flex;
    justify-content: space-between;
}

.y-unconfirmed__img {
    width: 100rpx;
    height: 100rpx;
    margin-top: 14rpx;
    margin-bottom: 8rpx;
}

.y-unconfirmed__img image {
    width: 100%;
    height: 100%;
}

.y-unconfirmed__info {
    flex: 1;
    max-width: 74%;
    margin-left: 26rpx;
}

.y-unconfirmed__contacts {
    margin-top: -6rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.y-commenting__filtrate-wrap {
    justify-content: flex-start;
}

.y-commenting__filtrate {
    margin-left: 10rpx;
    padding: 0 60rpx;
    color: #676566;
}

.y-commenting__filtrate::before, .y-commenting__filtrate::after {
    content: "";
    position: absolute;
    display: block;
}

.y-commenting__filtrate::before {
    margin-left: 70rpx;
    margin-top: 18rpx;
    border-left: 6rpx solid transparent;
    border-right: 6rpx solid transparent;
    border-bottom: 10rpx solid #676566;
}

.y-commenting__filtrate::after {
    margin-left: 70rpx;
    margin-top: -26rpx;
    border-left: 6rpx solid transparent;
    border-right: 6rpx solid transparent;
    border-top: 10rpx solid #676566;
}

.y-commenting__filtrate--litre::before {
    border-bottom-color: #3982e8;
}

.y-commenting__filtrate--drop::after {
    border-top-color: #3982e8;
}

.y-commenting__filtrate--litre,
.y-commenting__filtrate--drop{
    color: #3982e8;
}

/* y-obligation */

.y-obligation {
    width: 100%;
    height: 100%;
    margin-bottom: 82rpx;
}

.y-title__btn--edit {
    padding:0 6rpx;
    color: #333;
    font-size: 28rpx;
}

.y-title__btn--edit::before {
    content: "";
    position: absolute;
    display: block;
    width: 2rpx;
    height: 26rpx;
    margin-left: -24rpx;
    margin-top: 18rpx;
    background-color: #d2d2d2;
}

.y-list .weui-cell {
    height: 244rpx;
}
.y-list .weui-cell::before {
    background-color: #e8e8ed;
}

.y-list__left {
    position: absolute;
    display: flex;
    align-items: center;
    width: 100%;
    height: 242rpx;
    background-color: #fff;
    z-index: 5;
}

.y-list .weui-cell__bd.list__item {
    max-width: 684rpx;
    padding: 0;
    /* padding-bottom: 9rpx; */
    border-bottom: none;
}

.y-list .weui-cell__bd.list__item .list__text {
    max-width: 488rpx;
    line-height: 42rpx;
    color: #666;
}

.y-list .weui-cell__bd.list__item .list__title {
    margin: 0;
    margin-bottom: 6rpx;
}

.y-list .weui-cell {
    padding: 0;
}

.list__subtext {
    display: block;
    width: 100%;
    line-height: 44rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list__money {
    display: flex;
    justify-content: flex-end;
    color: #f00;
    font-size: 28rpx;
}

.y-account {
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    border-top: 1rpx solid #e8e8ed;
    line-height: 80rpx;
    background-color: #fff;
    font-size: 30rpx;
    z-index: 90;
}

.y-obligation .weui-check__hd_in-checkbox {
    margin-top: 0;
}

.y-obligation .y-list .weui-check__hd_in-checkbox {
    margin-top: -44rpx;
    margin-left: 20rpx;
}

.y-list .weui-icon-checkbox_success {
    margin-top: -30rpx;
}

.y-account .weui-icon-checkbox_success {
    margin-top: -20rpx;
}

.y-account .weui-cell {
    padding-top: 0;
    padding-bottom: 0;
}

.y-account__right {
    display: flex;
}

.y-account__total text {
    display: inline-block;
    width: 100rpx;
    color: #f00;
    font-size: 28rpx;
}

.y-account__btn {
    width: 200rpx;
    margin-left: 50rpx;
    background-color: #3982e8;
    color: #fff;
    text-align: center;
}

.list__btn--delete {
    position: absolute;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 53px;
    height: 242rpx;
    /* margin-top: -30rpx; *//* margin-left: 72rpx; */
    background-color: #f00;
    color: #fff;
    font-size: 28rpx;
    /* display: none; */
}
