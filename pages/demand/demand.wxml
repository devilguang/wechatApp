<!--pages/demand/demand.wxml-->
<import src="../../templates/TListItem.wxml" />

<view class="list-wrap">
    <view class="y-form">
        <view class="y-search__form">
            <picker class="y-search__addr" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <text>{{addr}}</text>
            </picker>
            <!-- <picker class="y-search__field" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
                <view class="y-search__item">
                    当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
                </view>
            </picker> -->
            <view class="y-search__field" bindtap="showCheckBox">{{fieldStr}}</view>
            <button class="y-search__btn--form" type="primary" size="mini">搜索</button>
        </view>
        <view class="field-list" wx:if="{{show}}">
            <checkbox-group bindchange="checkboxChange">
                <label class="weui-cell weui-check__label" wx:for="{{checkboxItems}}" wx:key="{{item.value}}">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
                    <view class="weui-cell__hd weui-check__hd_in-checkbox">
                        <icon class="weui-icon-checkbox_success" type="success_no_circle" size="16" wx:if="{{item.checked}}"></icon>
                    </view>
                    <view class="weui-cell__bd">{{item.value}}</view>
                </label>
            </checkbox-group>
        </view>
    </view>
    <view class="y-list--center" bindtap="showCheckBox">
        <block wx:for="{{list}}" wx:key="{{item.id}}">
            <template is="listItem" data="{{...item}}"></template>
        </block>
    </view>
</view>