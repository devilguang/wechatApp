/* pages/myself/myself.wxss */

.y-myself__info {
    width: 86.4%;
    padding: 32rpx 7.2%; 
    display: flex;
    background-color: #3982e8;
    font-family: '微软雅黑';
}

.y-myself__img {
    width: 162rpx;
    height: 162rpx;
}

.y-myself__img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.y-myself__text{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    flex: 1;
    max-width: 62.5%;
    margin-left: 5.8%;
    padding: 22rpx 0;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.y-myself__text view{
    width: 100%;
}

.weui-cells{
    margin-top: 0;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    font-family: '微软雅黑';
}

.weui-cells::before{
    border-top: 0;
}

.weui-cells::after{
    border-bottom: 0;
}